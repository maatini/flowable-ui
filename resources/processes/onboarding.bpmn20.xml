<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
  xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
  xmlns:flowable="http://flowable.org/bpmn"
  targetNamespace="Examples">

  <process id="onboardingProcess" name="Onboarding Prozess" isExecutable="true">
    <startEvent id="startEvent" name="Onboarding gestartet"/>
    <sequenceFlow id="flow1" sourceRef="startEvent" targetRef="hrApproval"/>
    
    <userTask id="hrApproval" name="HR Freigabe" flowable:candidateGroups="hr"/>
    <sequenceFlow id="flow2" sourceRef="hrApproval" targetRef="managerApproval"/>
    
    <userTask id="managerApproval" name="Manager Genehmigung" flowable:candidateGroups="management"/>
    <sequenceFlow id="flow3" sourceRef="managerApproval" targetRef="systemUpdate"/>
    
    <serviceTask id="systemUpdate" name="System aktualisieren" flowable:expression="${onboardingService.updateSystem()}"/>
    <sequenceFlow id="flow4" sourceRef="systemUpdate" targetRef="endEvent"/>
    
    <endEvent id="endEvent" name="Onboarding abgeschlossen"/>
  </process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_onboardingProcess">
    <bpmndi:BPMNPlane bpmnElement="onboardingProcess" id="BPMNPlane_onboardingProcess">
      <bpmndi:BPMNShape id="startEvent_di" bpmnElement="startEvent">
        <dc:Bounds x="100" y="100" width="36" height="36" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="hrApproval_di" bpmnElement="hrApproval">
        <dc:Bounds x="200" y="78" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="managerApproval_di" bpmnElement="managerApproval">
        <dc:Bounds x="350" y="78" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="systemUpdate_di" bpmnElement="systemUpdate">
        <dc:Bounds x="500" y="78" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="endEvent_di" bpmnElement="endEvent">
        <dc:Bounds x="650" y="100" width="36" height="36" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNEdge id="flow1_di" bpmnElement="flow1">
        <di:waypoint x="136" y="118" />
        <di:waypoint x="200" y="118" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="flow2_di" bpmnElement="flow2">
        <di:waypoint x="300" y="118" />
        <di:waypoint x="350" y="118" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="flow3_di" bpmnElement="flow3">
        <di:waypoint x="450" y="118" />
        <di:waypoint x="500" y="118" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="flow4_di" bpmnElement="flow4">
        <di:waypoint x="600" y="118" />
        <di:waypoint x="650" y="118" />
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>
