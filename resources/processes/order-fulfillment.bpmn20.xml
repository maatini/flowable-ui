      <bpmndi:BPMNShape id="paymentAuth_di" bpmnElement="paymentAuth">
        <dc:Bounds x="300" y="140" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="parallelJoin_di" bpmnElement="parallelJoin">
        <dc:Bounds x="450" y="93" width="50" height="50" />
