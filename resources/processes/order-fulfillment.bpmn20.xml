  <process id="orderFulfillment" name="Bestellabwicklung" isExecutable="true">
    <startEvent id="startEvent" name="Bestellung eingegangen"/>
    <sequenceFlow id="flow1" sourceRef="startEvent" targetRef="parallelSplit"/>
    
    <parallelGateway id="parallelSplit"/>
    <sequenceFlow id="flow2" sourceRef="parallelSplit" targetRef="inventoryCheck"/>
    <sequenceFlow id="flow3" sourceRef="parallelSplit" targetRef="paymentAuth"/>
    
    <userTask id="inventoryCheck" name="LagerprÃ¼fung" flowable:candidateGroups="warehouse"/>
    <sequenceFlow id="flow4" sourceRef="inventoryCheck" targetRef="parallelJoin"/>
    
    <userTask id="paymentAuth" name="Zahlung autorisieren" flowable:candidateGroups="finance"/>
    <sequenceFlow id="flow5" sourceRef="paymentAuth" targetRef="parallelJoin"/>
    
    <parallelGateway id="parallelJoin"/>
    <sequenceFlow id="flow6" sourceRef="parallelJoin" targetRef="shipping"/>
    
    <userTask id="shipping" name="Versand vorbereiten" flowable:candidateGroups="logistics"/>
    <sequenceFlow id="flow7" sourceRef="shipping" targetRef="endEvent"/>
    
    <endEvent id="endEvent" name="Bestellung versandt"/>
  </process>

